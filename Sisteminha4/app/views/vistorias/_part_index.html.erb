<h1>Vistorias</h1>

<br>
<table cellpadding="0" cellspacing="0" border="0" class="display dataTable" >
	<thead>
		<tr>
			<th>Número</th>
			<th>Data</th>
			<th>Vagão</th>
			<th>Problemas</th>
		</tr>
	</thead>
	<tbody>
		<% @vistorias.each do |vistoria| %>
		<tr>
			<td><%= link_to vistoria.id, vistoria %></td>
			<td><%= formatarData(vistoria.data) %></td>
			<td><%= vistoria.vt.numero_curto %></td>
			<td><% vistoria.problemas.each do |problema| %>
			<%= problema.descricao %>
			<br>
			<% end %> </td>
		</tr>
		<% end %>
	</tbody>
</table>
<br>
