<%= render 'fechamento_diario_vagaos/menu'%>
<%= render 'layouts/final_menu' %>
<h1>Fechamentos diários de vagões</h1>

<br>
<table cellpadding="0" cellspacing="0" border="0" class="display dataTable" >
	<thead>
		<tr>
			<th>Link</th>
			<th>Data</th>
			<th>Produto</th>
			<th>Quant.</th>
			<th>Total</th>
			<th>Finalizado?</th>
		</tr>
	</thead>
	<tbody>
		<% @fechamento_diario_vagaos.sort_by{|fechamento_diario_vagao| [fechamento_diario_vagao.data]}.reverse.each do |fechamento_diario_vagao| %>
		<tr>
			<td><%= link_to :ver, fechamento_diario_vagao %></td>
			<td><%= formatarDataHora(fechamento_diario_vagao.data) %></td>
			<td><%= fechamento_diario_vagao.produto %></td>
			<td><%= fechamento_diario_vagao.qtdOperacoes %></td>
			<td><%= fechamento_diario_vagao.pesoTotal %></td>
			<td>
				<% if fechamento_diario_vagao.composicoesFinalizado? %>
				sim
				<% else %>
				não
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<br>
