<%= render 'produtos/menu'%>
<%= render 'layouts/final_menu' %>
<h1>Produtos</h1>

<br>
<table cellpadding="0" cellspacing="0" border="0" class="display dataTable" >
	<thead>
		<tr>
			<th>Número</th>
			<th>Código</th>
			<th>Nome curto</th>
			<th>Nome completo</th>
		</tr>
	</thead>
	<tbody>
		<% @produtos.each do |produto| %>
		<tr>
			<td><%= link_to produto.id, produto %></td>
			<td><%= produto.codigo %></td>
			<td><%= produto.nome_curto %></td>
			<td><%= produto.nome_completo %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<br>
