<%= form_for(@composicao_de_vagao) do |f| %>
<% if @composicao_de_vagao.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@composicao_de_vagao.errors.count, "erro proíbe") %> esta composição de vagões de ser salva:</h2>
	<ul>
		<% @composicao_de_vagao.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="field">
	<%= f.label :responsável %>
	<br />
	<%= f.hidden_field :responsavel_id, :value => @usuario.id %>
	<%= @usuario.nome %>
</div>
<div class="field">
	<%= f.label :entrada_plataforma, "Entrada na plataforma" %>
	<br />
	<%= f.text_field :entrada_plataforma, :value => formatarDataHora(@composicao_de_vagao.entrada_plataforma) %>
</div>
<div class="field">
	<%= f.label :inicio_descarga, "Início da descarga" %>
	<br />
	<%= f.text_field :inicio_descarga, :value => formatarDataHora(@composicao_de_vagao.inicio_descarga) %>
</div>
<div class="field">
	<%= f.label :final_descarga, "Final da descarga" %>
	<br />
	<%= f.text_field :final_descarga, :value => formatarDataHora(@composicao_de_vagao.final_descarga) %>
</div>
<div class="field">
	<%= f.label :saida_plataforma, "Saída da plataforma" %>
	<br />
	<%= f.text_field :saida_plataforma, :value => formatarDataHora(@composicao_de_vagao.saida_plataforma) %>
</div>
<% if @composicao_de_vagao.fechamento_diario_vagao == nil %>
<div class="field">
	<%= f.label :fechamento_diario_vagao, "Fechamento diário de vagões" %>
	<br />
	<%= f.collection_select(:fechamento_diario_vagao_id, FechamentoDiarioVagao.all, :id, :id) %>
</div>
<%else%>
<div class="field">
	<%= f.label :fechamento_diario_vagao, "Fechamento diário de vagões" %>
	<br />
	<%= @composicao_de_vagao.fechamento_diario_vagao.id %>
	<%= f.hidden_field :fechamento_diario_vagao_id, :value => @composicao_de_vagao.fechamento_diario_vagao.id %>
</div>
<%end%>
<div class="field">
	<%= f.label :temperatura, "Temperatura" %>
	<br />
	<%= f.text_field :temperatura, :size => "1x2" %>
</div>
<div class="field">
	<%= f.label :tanque_destino, "Tanque de destino" %>
	<br />
	<%= f.text_field :tanque_destino, :size => "1x3" %>
</div>
<div class="field">
	<%= f.label :utilizou_vapor, "Operação com vapor" %>
	<br />
	<%= f.check_box :utilizou_vapor %>
</div>
<div class="field">
	<%= f.label :observacao, "Observação" %>
	<br />
	<%= f.text_area :observacao %>
</div>
<div class="actions">
	<%= f.submit %>
</div>
<% end %> 