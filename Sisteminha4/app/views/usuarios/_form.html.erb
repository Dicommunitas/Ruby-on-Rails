<%= form_for(@usuario) do |f| %>
  <% if @usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@usuario.errors.count, "erro proíbe") %> este usuário de ser salvo:</h2>

      <ul>
      <% @usuario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :chave %><br />
    <%= f.text_field :chave %>
  </div>
  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label "Nome de Guerra" %><br />
    <%= f.text_field :nome_guerra %>
  </div>
  <div class="field">
    <%= f.label :privilegio, 'Privilégio' %><br />
    <%= f.collection_select(:privilegio_id, GrupoUsuario.all, :id, :tipo) %>
  </div>
    <div class="field">
    <%= f.label "Observação" %><br />
    <%= f.text_field :observacao %>
  </div>
  <div class="field">
    <%= f.label :senha %><br />
    <%= f.password_field :senha %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
